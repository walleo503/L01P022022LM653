<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - L01P022022LM653</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/L01P022022LM653.styles.css" asp-append-version="true" />
</head>
<style>
    .notas-menu {
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 1000;
    }

        .notas-menu .nav-menu {
            display: none;
            position: absolute;
            top: 40px;
            left: 0;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .notasmenu input[type="checkbox"] {
            display: none;
        }

            .notas-menu input[type="checkbox"]:checked ~ .nav-menu {
                display: block;
            }

    .notas-icon {
        font-size: 24px;
        cursor: pointer;
        color: #ffff;
    }

    .nav-menu a {
        display: block;
        padding: 8px 15px;
        color: #333;
        text-decoration: none;
    }

        .nav-menu a:hover {
            background-color: #f8f9fa;
            color: #C2102B;
        }

    .content-section {
        padding: 50px 0;
        background-color: #f8f9fa;
    }

        .content-section h2 {
            text-align: center;
            margin-bottom: 40px;
            color: #333;
        }

    .menu-item {
        text-align: center;
        margin-bottom: 30px;
    }

        .menu-item img {
            width: 100%;
            max-width: 300px;
            border-radius: 10px;
        }

        .menu-item h4 {
            margin-top: 15px;
            color: #333;
        }

        .menu-item p {
            color: #777;
        }
</style>
</head>
<body>
    <!-- Menú notas-->
    <div class="notas-menu">
        <label class="notas-icon" for="menu-toggle"><i class="fas fa-bars"></i></label>
        <input type="checkbox" id="menu-toggle" />
        <div class="nav-menu">
            <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a asp-area="" asp-controller="alumnos" asp-action="Index">Alumnos</a>
            <a asp-area="" asp-controller="departamentos" asp-action="Index">Departamentos</a>
            <a asp-area="" asp-controller="facultades" asp-action="Index">Facultades</a>
            <a asp-area="" asp-controller="materias" asp-action="Index">Materias</a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </div>

    <!-- Contenido de las vistas -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Mi Aplicación - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
